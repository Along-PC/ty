<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEBEBEB"
    android:orientation="vertical"
    tools:context="com.tourye.zhong.ui.activity.SettingActivity">

    <RelativeLayout
        android:id="@+id/rl_activity_setting_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:background="@color/color_font_white"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="消息通知"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/font_14" />

        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_alignParentBottom="true"
            android:background="#FFEBEBEB" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_activity_setting_bind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:background="@color/color_font_white"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="手机绑定"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/font_14" />

        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:background="#FFEBEBEB" />

    <RelativeLayout
        android:id="@+id/rl_activity_setting_business"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:background="@color/color_font_white"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="商务合作"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/font_14" />

        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_alignParentBottom="true"
            android:background="#FFEBEBEB" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_activity_setting_cache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:background="@color/color_font_white"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="清除缓存"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/font_14" />

        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_alignParentBottom="true"
            android:background="#FFEBEBEB" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_activity_setting_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:background="@color/color_font_white"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="帮助与吐槽"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/font_14" />

        <ImageView
            android:layout_width="@dimen/size_24"
            android:layout_height="@dimen/size_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_arrow_right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"
        android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size_50"
            android:gravity="center"
            android:text="Copyright@2004-2018\n京东JD.com版权所有" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_activity_setting_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_46"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginRight="@dimen/size_20"
        android:layout_marginBottom="@dimen/size_30"
        android:background="@drawable/shape_login_bt_checked"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/color_font_white"
        android:textSize="@dimen/font_16" />

</LinearLayout>
