<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_287"
    android:background="@drawable/shape_delete_dynamic"
    android:layout_height="@dimen/size_138">

    <TextView
        android:text="确定清除缓存吗?"
        android:textSize="@dimen/font_18"
        android:gravity="center"
        android:textColor="#FF000000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_86" />

    <View
        android:layout_above="@+id/ll_dialog_clear_cache"
        android:background="#FFDDDDDD"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"/>

    <LinearLayout
        android:id="@+id/ll_dialog_clear_cache"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_49">

        <TextView
            android:id="@+id/tv_dialog_clear_cache_cancel"
            android:text="取消"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_18"
            android:textColor="#FF4A90E2"
            android:layout_width="@dimen/size_0"
            android:layout_height="match_parent" />
        <View
            android:background="#FFDDDDDD"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/size_1"
            android:layout_height="@dimen/size_44"/>

        <TextView
            android:id="@+id/tv_dialog_clear_cache_certain"
            android:text="确认"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_18"
            android:textColor="#FF4A90E2"
            android:layout_width="@dimen/size_0"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>