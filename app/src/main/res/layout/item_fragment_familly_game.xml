<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_110">

    <ImageView
        android:id="@+id/img_item_fragment_famillygame_list"
        android:layout_gravity="center_vertical"
        android:background="#0f0"
        android:layout_marginRight="@dimen/size_10"
        android:layout_width="@dimen/size_140"
        android:layout_height="@dimen/size_90" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_item_famillygame_list_title"
            android:text="MDC重走玄奘之路戈壁精英挑战赛"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/font_14"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40" />

        <TextView
            android:id="@+id/tv_item_famillygame_list_time"
            android:text="2018/08/17-2018/08/20"
            android:textSize="@dimen/font_14"
            android:textColor="#999999"
            android:layout_marginBottom="@dimen/size_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20" />

        <TextView
            android:id="@+id/tv_item_famillygame_list_price"
            android:text="12800元"
            android:textColor="#D0021B"
            android:textSize="@dimen/font_14"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20" />

    </LinearLayout>



</LinearLayout>