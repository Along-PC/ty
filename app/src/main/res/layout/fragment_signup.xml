<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFEBEBEB"
    android:orientation="vertical">

    <ScrollView
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_180">

                <ImageView
                    android:id="@+id/img_fragment_signup_top"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/img_fragment_signup_top_logo"
                    android:layout_width="@dimen/size_150"
                    android:layout_height="@dimen/size_43"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_57"
                    android:background="@drawable/icon_signup_logo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_fragment_signup_top_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_41"
                        android:gravity="center_vertical"
                        android:text="8大特色体验"
                        android:textColor="@color/color_font_white"
                        android:textSize="@dimen/font_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_41"
                        android:gravity="center_vertical"
                        android:text="9大地貌路线"
                        android:textColor="@color/color_font_white"
                        android:textSize="@dimen/font_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="10年安全服务"
                        android:textColor="@color/color_font_white"
                        android:textSize="@dimen/font_10" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_75"
                android:layout_marginLeft="@dimen/size_14"
                android:layout_marginRight="@dimen/size_14"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="@dimen/size_10"
                android:background="@drawable/shape_fragment_signup_business"
                android:paddingTop="@dimen/size_12">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_fragment_signup_link"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <com.tourye.zhong.views.MeasureListView
                android:layout_marginLeft="@dimen/size_14"
                android:layout_marginRight="@dimen/size_14"
                android:id="@+id/list_fragment_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null">

            </com.tourye.zhong.views.MeasureListView>

            <android.support.v7.widget.CardView
                app:cardCornerRadius="@dimen/size_6"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_14"
                android:layout_marginRight="@dimen/size_14"
                android:layout_height="@dimen/size_150">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/icon_more_game"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tv_fragment_signup_more_title"
                        android:text="更多赛事 敬请期待"
                        android:textColor="@color/color_font_white"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/size_50"
                        android:textSize="@dimen/font_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="@dimen/size_10"
                        android:layout_below="@+id/tv_fragment_signup_more_title"
                        android:textColor="@color/color_font_white"
                        android:textSize="@dimen/font_14"
                        android:text="陶冶户外"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_14"
                android:layout_marginRight="@dimen/size_14"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_43"
                    android:background="@color/color_font_white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_14"
                        android:layout_weight="1"
                        android:text="赛事实录"
                        android:textColor="@color/color_font_black"
                        android:textSize="@dimen/font_18"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/size_14"
                        android:background="@drawable/icon_arrow_right" />
                </LinearLayout>
                <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
                    android:id="@+id/video_fragment_signup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_194"/>


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recylce_fragment_signup_top"
                android:layout_marginBottom="@dimen/size_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_83">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recylce_fragment_signup_center"
                android:layout_marginBottom="@dimen/size_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_83">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recylce_fragment_signup_bottom"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/size_4"
                android:layout_height="@dimen/size_83">

            </android.support.v7.widget.RecyclerView>

            <ImageView
                android:background="@drawable/icon_logo_white"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_47" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>