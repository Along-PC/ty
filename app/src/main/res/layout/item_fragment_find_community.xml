<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_font_white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginRight="@dimen/size_14"
        android:layout_marginTop="@dimen/size_14">

        <ImageView
            android:id="@+id/img_item_find_community_head"
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:layout_marginRight="@dimen/size_10"
            android:background="@drawable/shape_find_community_head" />

        <TextView
            android:id="@+id/tv_item_find_community_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:layout_toRightOf="@+id/img_item_find_community_head"
            android:text="优秀网页设计"
            android:textColor="@color/color_font_black"
            android:textSize="@dimen/font_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_find_community_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_find_community_name"
            android:layout_toRightOf="@+id/img_item_find_community_head"
            android:text="18-10-20"
            android:textColor="#FF999999"
            android:textSize="@dimen/font_14" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_find_community_content"
        android:textColor="#FF000000"
        android:textSize="@dimen/font_14"
        android:layout_marginLeft="@dimen/size_14"
        android:layout_marginRight="@dimen/size_14"
        android:text="对于人际关系，我逐渐总对于人际关系，我逐渐总对于人际关系，我逐渐总对于人际关系，我逐渐总对于人际关系，我逐渐总对于人际关系，我逐渐总对于人际关系，我逐渐总对于人际关系，我逐渐总对于人际关系，我逐渐总对于人际关系，我逐渐总对于人际关系，我逐渐总对于人际关系，我逐渐总对于人际关系，我逐渐总结出了一个最合乎我的性情的原则，就是互相尊重，亲疏随缘。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_find_community_content_state"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        android:layout_marginLeft="@dimen/size_14"
        android:text="展开"
        android:textColor="@color/color_font_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.tourye.zhong.views.NineGridlayout
        android:id="@+id/nine_item_find_community"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_marginRight="@dimen/size_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.tourye.zhong.views.NineGridlayout>

    <View
        android:layout_marginTop="@dimen/size_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/color_font_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44">

        <RelativeLayout
            android:id="@+id/rl_item_find_community_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_find_share" />

                <TextView
                    android:id="@+id/tv_item_find_community_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="分享"
                    android:textColor="@color/color_font_black_lite"
                    android:textSize="@dimen/font_16" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="@dimen/size_1"
            android:layout_height="match_parent"
            android:background="#eeeeee" />

        <RelativeLayout
            android:id="@+id/rl_item_find_community_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_find_comment" />

                <TextView
                    android:id="@+id/tv_item_find_community_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="评论"
                    android:textColor="@color/color_font_black_lite"
                    android:textSize="@dimen/font_16" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="@dimen/size_1"
            android:layout_height="match_parent"
            android:background="#eeeeee" />

        <RelativeLayout
            android:id="@+id/rl_item_find_community_thumb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_item_find_community_thumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_thumb_up_state" />

                <TextView
                    android:id="@+id/tv_item_find_community_thumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="12"
                    android:textColor="@color/color_font_black_lite"
                    android:textSize="@dimen/font_16" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>