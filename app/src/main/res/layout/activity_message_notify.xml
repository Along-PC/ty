<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFEBEBEB"
    tools:context="com.tourye.zhong.ui.activity.MessageNotifyActivity">

    <TextView
        android:text="推送通知未打开，你可进入“设置”-“通知”中，找到陶冶户外开启通知"
        android:textSize="@dimen/font_12"
        android:textColor="@color/color_font_black"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:background="@color/color_font_white"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44">

        <TextView
            android:text="动态回复提醒"
            android:textSize="@dimen/font_14"
            android:textColor="@color/color_font_black"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        
        <Switch
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_25" />

        <View
            android:background="#FFEBEBEB"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/color_font_white"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44">

        <TextView
            android:text="动态点赞提醒"
            android:textSize="@dimen/font_14"
            android:textColor="@color/color_font_black"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Switch
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_25" />

        <View
            android:background="#FFEBEBEB"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/color_font_white"
        android:paddingLeft="@dimen/size_14"
        android:paddingRight="@dimen/size_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44">

        <TextView
            android:text="众筹进展提醒"
            android:textSize="@dimen/font_14"
            android:textColor="@color/color_font_black"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Switch
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_25" />

        <View
            android:background="#FFEBEBEB"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"/>
    </RelativeLayout>

    

</LinearLayout>
